{
  "manifest_version": 3,
  "name": "AI Privacy Guard",
  "description": "An application that explains website AI access requests in plain English, assesses privacy risks, and provides clear, actionable guidance for users.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon.svg"
  },
  "icons": {
    "128": "assets/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
